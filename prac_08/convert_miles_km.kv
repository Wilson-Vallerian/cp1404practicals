BoxLayout:
	orientation: "vertical"
	BoxLayout:
		orientation: "horizontal"
		TextInput:
			id: input_number
			on_text: app.handle_calculate(input_number.text)
			text: '7'
			font_size: 48
			multiline: False
		BoxLayout:
			orientation: "vertical"
			Button:
				on_press: app.handle_increment(input_number.text)
				text: "Up"
			Button:
				on_press: app.handle_decrement(input_number.text)
				text: "Down"
